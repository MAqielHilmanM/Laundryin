<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="442dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="28dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beri Ulasan Anda"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/etSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FBFBFB"
        android:hint="Tulis Ulasan anda disini"
        android:gravity="top"
        android:padding="16dp"
        android:layout_marginVertical="23dp"/>
    <Button
        android:id="@+id/btnSheet"
        android:text="Kirim Ulasan"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"/>
    <TextView
        android:id="@+id/tvSheetSkip"
        android:text="Tidak, memberi ulasan"
        android:textColor="#A8222222"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>